# Use the official slim Python 3.12 image as base
FROM python:3.12.11-slim

# Install system dependencies:
RUN apt-get update && apt-get install -y git curl build-essential && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Install Poetry package manager at a fixed version for dependency management
RUN pip install poetry==2.1.3

# Set the working directory inside the container
WORKDIR /bsg-testdatascience-1

# Copy Poetry dependency files to container first for better caching
COPY pyproject.toml poetry.lock* ./

# Configure Poetry to install dependencies globally
RUN poetry config virtualenvs.create false && \
    poetry install --no-interaction --no-ansi --no-root

# Copy the rest of the project files into the container
COPY . .

# Default command to keep the container running with an interactive shell
CMD ["bash"]
